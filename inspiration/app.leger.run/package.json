{
  "name": "leger-app",
  "version": "0.1.0",
  "description": "Web application for Leger secret management and release tracking",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run build:worker",
    "build:worker": "node scripts/build-worker.js",
    "preview": "vite preview",
    "deploy": "echo '⚠️  Use GitHub Actions for deployment. Push to main branch or run workflow manually.'",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 65",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "ci": "npm run typecheck && npm run lint && npm run build",
    "clean": "rm -rf dist node_modules",
    "db:migrate": "wrangler d1 execute leger-db --file=./db/migrations/0001_initial.sql",
    "db:create": "wrangler d1 create leger-db",
    "kv:create": "wrangler kv:namespace create LEGER_USERS && wrangler kv:namespace create LEGER_USERS --preview && wrangler kv:namespace create LEGER_SECRETS && wrangler kv:namespace create LEGER_SECRETS --preview",
    "r2:create": "wrangler r2 bucket create leger-static-sites",
    "ladle:dev": "ladle serve",
    "ladle:build": "ladle build",
    "ladle:preview": "ladle preview"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@rjsf/core": "^5.15.0",
    "@rjsf/utils": "^5.15.0",
    "@rjsf/validator-ajv8": "^5.15.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.49.2",
    "react-router-dom": "^6.20.0",
    "sonner": "^1.3.1",
    "tailwind-merge": "^1.14.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@hookform/resolvers": "^3.9.1",
    "@ladle/react": "^5.1.0",
    "@radix-ui/react-aspect-ratio": "^1.1.7",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-menubar": "^1.1.16",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.14",
    "cmdk": "^1.1.1",
    "embla-carousel-react": "^8.6.0",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^16.4.0",
    "input-otp": "^1.4.2",
    "postcss": "^8.4.27",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "react-day-picker": "^9.11.1",
    "react-resizable-panels": "^3.0.6",
    "recharts": "^3.3.0",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.0.2",
    "typescript-eslint": "^8.18.2",
    "vaul": "^1.1.2",
    "vite": "^6.1.0",
    "wrangler": "^4.33.1",
    "zod": "^3.23.8"
  }
}
